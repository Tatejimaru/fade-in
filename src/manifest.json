{
    "name": "ふわっとフェードイン効果",
    "version": "0.0.1",
    "manifest_version": 2,
    "description": "眩しさを抑えるため、ページを開く前に「ふわっ」と点灯します。",
    "icons": {
        "16": "icons/16.png",
        "48": "icons/48.png",
        "128": "icons/128.png"
    },
    "browser_action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "run_at": "document_start",
            "css": [
                "ready.css"
            ]
        },
        {
            "matches": [
                "<all_urls>"
            ],
            "run_at": "document_end",
            "js": [
                "content.js"
            ]
        }
    ],
    "permissions": [
        "storage"
    ]
}